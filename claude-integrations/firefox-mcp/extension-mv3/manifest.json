{
  "manifest_version": 3,
  "name": "Claude Firefox MCP",
  "version": "1.0.0",
  "description": "Claude Code browser automation for Firefox via MCP",
  "author": "hyperpolymath",
  "homepage_url": "https://github.com/hyperpolymath/claude-firefox-mcp",

  "browser_specific_settings": {
    "gecko": {
      "id": "claude-mcp@hyperpolymath.org",
      "strict_min_version": "109.0"
    }
  },

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },

  "action": {
    "default_icon": {
      "48": "icons/icon-48.png"
    },
    "default_title": "Claude MCP"
  }
}
