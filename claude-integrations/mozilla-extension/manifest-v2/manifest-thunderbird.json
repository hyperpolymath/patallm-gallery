{
  "manifest_version": 2,
  "name": "Claude for Thunderbird",
  "version": "1.0.0",
  "description": "Claude AI assistant for Thunderbird - help with email composition, summarization, and more",
  "author": "hyperpolymath",
  "homepage_url": "https://github.com/hyperpolymath/claude-mozilla-extension",

  "applications": {
    "gecko": {
      "id": "claude-thunderbird@hyperpolymath.org",
      "strict_min_version": "78.0"
    }
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },

  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "compose",
    "messagesRead",
    "https://api.anthropic.com/*"
  ],

  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png"
    },
    "default_title": "Open Claude",
    "default_popup": "ui/sidebar.html"
  },

  "background": {
    "scripts": ["background/background.js"],
    "persistent": false
  },

  "content_security_policy": "script-src 'self'; object-src 'self'"
}
