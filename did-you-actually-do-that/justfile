# SPDX-License-Identifier: PMPL-1.0-or-later
# justfile - did-you-actually-do-that (dyadt)
# Verification framework for validating claimed AI actions
set shell := ["bash", "-uc"]

project := "did-you-actually-do-that"

# Show all recipes
default:
    @just --list --unsorted

# Build release binary
build:
    cargo build --release

# Build debug binary
build-debug:
    cargo build

# Run all tests
test:
    cargo test

# Run tests with output
test-verbose:
    cargo test -- --nocapture

# Run benchmarks
bench:
    cargo bench

# Format code
fmt:
    cargo fmt

# Check formatting without changes
fmt-check:
    cargo fmt -- --check

# Lint with clippy
lint:
    cargo clippy -- -D warnings

# Full check (fmt + lint + test)
check: fmt-check lint test

# Run the dyadt CLI
run *ARGS:
    cargo run -- {{ARGS}}

# Generate documentation
doc:
    cargo doc --no-deps --open

# Clean build artifacts
clean:
    cargo clean

# Update dependencies
update:
    cargo update

# Security audit
audit:
    cargo audit

# Run property tests
test-props:
    cargo test --test '*' -- --include-ignored

# Run fuzz tests (requires cargo-fuzz)
fuzz TARGET="verify":
    cargo +nightly fuzz run {{TARGET}}

# All pre-commit checks
pre-commit: check
    @echo "All checks passed!"
